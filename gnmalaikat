-- 🏔️ AUTO SUMMIT GUI FINAL (Yars Version - GPT-5)
-- Versi: Teleport ke Puncak & Basecamp (tanpa remote)
-- GUI tetap setelah respawn

-- ✅ Lokasi default CFrame
local summitCFrame = CFrame.new(306.720917, 1230.53601, 83.6961441, -0.775216639, 3.220131942e-09, 0.631695449, 1.67592322e-08, 1, 1.546932726e-08, -0.631695449, 2.257880996e-08, -0.775216639)
local basecampCFrame = CFrame.new(239.613831, -442.460175, -2266.33398, 0.996433914, -0.0830952376, 0.0146519532, -8.51204274e-10, 0.173648402, 0.98480773, -0.0843771175, -0.981295764, 0.173029155)

-- 🔧 Variabel
local autoSummit = false
local speed = 1

-- 🪄 Fungsi buat GUI
local function createGUI()
    -- Hapus GUI lama kalau ada
    if game.CoreGui:FindFirstChild("AutoSummitGUI") then
        game.CoreGui:FindFirstChild("AutoSummitGUI"):Destroy()
    end

    local gui = Instance.new("ScreenGui")
    gui.Name = "AutoSummitGUI"
    gui.ResetOnSpawn = false
    gui.Parent = game.CoreGui

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 220, 0, 300)
    frame.Position = UDim2.new(0.05, 0, 0.3, 0)
    frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    frame.BackgroundTransparency = 0.2
    frame.BorderSizePixel = 0
    frame.Parent = gui

    local title = Instance.new("TextLabel")
    title.Text = "🏔️ AUTO SUMMIT"
    title.Size = UDim2.new(1, 0, 0, 30)
    title.BackgroundTransparency = 1
    title.TextColor3 = Color3.new(1, 1, 1)
    title.Font = Enum.Font.GothamBold
    title.TextScaled = true
    title.Parent = frame

    local startBtn = Instance.new("TextButton")
    startBtn.Text = "▶ Start Auto Summit"
    startBtn.Size = UDim2.new(1, -20, 0, 30)
    startBtn.Position = UDim2.new(0, 10, 0, 40)
    startBtn.BackgroundColor3 = Color3.fromRGB(60, 180, 75)
    startBtn.TextColor3 = Color3.new(1, 1, 1)
    startBtn.Font = Enum.Font.Gotham
    startBtn.TextScaled = true
    startBtn.Parent = frame

    local stopBtn = Instance.new("TextButton")
    stopBtn.Text = "⏹ Stop"
    stopBtn.Size = UDim2.new(1, -20, 0, 30)
    stopBtn.Position = UDim2.new(0, 10, 0, 80)
    stopBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
    stopBtn.TextColor3 = Color3.new(1, 1, 1)
    stopBtn.Font = Enum.Font.Gotham
    stopBtn.TextScaled = true
    stopBtn.Parent = frame

    local teleportSummitBtn = Instance.new("TextButton")
    teleportSummitBtn.Text = "⛰️ Ke Puncak"
    teleportSummitBtn.Size = UDim2.new(1, -20, 0, 30)
    teleportSummitBtn.Position = UDim2.new(0, 10, 0, 120)
    teleportSummitBtn.BackgroundColor3 = Color3.fromRGB(80, 140, 255)
    teleportSummitBtn.TextColor3 = Color3.new(1, 1, 1)
    teleportSummitBtn.Font = Enum.Font.Gotham
    teleportSummitBtn.TextScaled = true
    teleportSummitBtn.Parent = frame

    local teleportBaseBtn = Instance.new("TextButton")
    teleportBaseBtn.Text = "🏕️ Ke Basecamp"
    teleportBaseBtn.Size = UDim2.new(1, -20, 0, 30)
    teleportBaseBtn.Position = UDim2.new(0, 10, 0, 160)
    teleportBaseBtn.BackgroundColor3 = Color3.fromRGB(255, 165, 0)
    teleportBaseBtn.TextColor3 = Color3.new(1, 1, 1)
    teleportBaseBtn.Font = Enum.Font.Gotham
    teleportBaseBtn.TextScaled = true
    teleportBaseBtn.Parent = frame

    local speedBox = Instance.new("TextBox")
    speedBox.PlaceholderText = "Kecepatan (0.1 - 5)"
    speedBox.Size = UDim2.new(1, -20, 0, 30)
    speedBox.Position = UDim2.new(0, 10, 0, 200)
    speedBox.Text = tostring(speed)
    speedBox.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    speedBox.TextColor3 = Color3.new(1, 1, 1)
    speedBox.Font = Enum.Font.Gotham
    speedBox.TextScaled = true
    speedBox.Parent = frame

    local cframeBox = Instance.new("TextBox")
    cframeBox.PlaceholderText = "Masukkan CFrame puncak baru..."
    cframeBox.Size = UDim2.new(1, -20, 0, 30)
    cframeBox.Position = UDim2.new(0, 10, 0, 240)
    cframeBox.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    cframeBox.TextColor3 = Color3.new(1, 1, 1)
    cframeBox.Font = Enum.Font.Gotham
    cframeBox.TextScaled = true
    cframeBox.Parent = frame

    -- 🌀 Fungsi tombol
    startBtn.MouseButton1Click:Connect(function()
        autoSummit = true
        while autoSummit do
            local char = game.Players.LocalPlayer.Character
            if char and char:FindFirstChild("HumanoidRootPart") then
                char.HumanoidRootPart.CFrame = summitCFrame
            end
            task.wait(speed)
        end
    end)

    stopBtn.MouseButton1Click:Connect(function()
        autoSummit = false
    end)

    teleportSummitBtn.MouseButton1Click:Connect(function()
        local hrp = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
        if hrp then
            hrp.CFrame = summitCFrame
        end
    end)

    teleportBaseBtn.MouseButton1Click:Connect(function()
        local hrp = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
        if hrp then
            hrp.CFrame = basecampCFrame
        end
    end)

    speedBox.FocusLost:Connect(function()
        local val = tonumber(speedBox.Text)
        if val and val >= 0.1 and val <= 5 then
            speed = val
        else
            speedBox.Text = tostring(speed)
        end
    end)

    cframeBox.FocusLost:Connect(function()
        local success, newCFrame = pcall(function()
            return loadstring("return CFrame.new(" .. cframeBox.Text .. ")")()
        end)
        if success and typeof(newCFrame) == "CFrame" then
            summitCFrame = newCFrame
            cframeBox.Text = "✅ CFrame diperbarui!"
            task.delay(1.5, function() cframeBox.Text = "" end)
        else
            cframeBox.Text = "❌ Format salah!"
            task.delay(1.5, function() cframeBox.Text = "" end)
        end
    end)
end

-- 🔁 GUI tetap setelah respawn
createGUI()
game.Players.LocalPlayer.CharacterAdded:Connect(function()
    task.wait(2)
    createGUI()
end)
